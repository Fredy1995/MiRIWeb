@using System.Configuration;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Repositorio Institucional</title>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/25c469d056.js" crossorigin="anonymous"></script>
    <link href="~/Content/StyleLayout.css" rel="stylesheet" />
    <link href="~/Content/StyleIndex.css" rel="stylesheet" />
    <link href="~/Content/StyleTema.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    <script src="~/Scripts/menujs.js"></script>
    <script src="~/Scripts/jquery-3.6.1.min.js"></script>
    <script src="~/Scripts/clicizquierdo.js"></script>
    <script type="text/javascript">javascript: window.history.forward(1);</script> <!--Script para el boton back del navegador-->
    <script src="~/Scripts/clicderecho.js"></script>
    <link href="~/Content/clicderecho.css" rel="stylesheet" />
  <script>
      function deshabilitaRetroceso() {
          window.location.hash = "no-back-button";
          window.location.hash = "Again-No-back-button" //chrome
          window.onhashchange = function () { window.location.hash = ""; }
      }
  </script>
</head>
<body style=" background: #D8D6D6;" onload="deshabilitaRetroceso()">



    @{
        if (Session["nameComplete"] != null)
        {
            <nav class="navbar fixed-top navbar-expand-sm " style="background-color:#034250;">
                <div class="container-fluid">
                    <div class="navbar-brand" href="#">
                        <button class="openbtn" onclick="openNav()">☰ Menu</button>
                    </div>
                    <ul class="navbar-nav navbar-toggler" data-bs-toggle="collapse">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" style="color:white;"><img src="~/Images/Usericon.png" alt="Avatar" class="avatarNav"></a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item">@Session["nameComplete"].ToString()</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Home")">SALIR</a></li>
                            </ul>
                        </li>
                    </ul>

                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav me-auto">
                        </ul>
                        <form class="d-flex">
                            <a><img src="~/Images/Usericon.png" alt="Avatar" class="avatarNav"> </a>&nbsp;&nbsp;
                            <a style="color:white;">@Session["nameComplete"].ToString() </a>&nbsp;&nbsp;
                            <a href="@Url.Action("Logout", "Home")"><i class='fas fa-power-off' style='font-size:18px; color:white;'></i></a>
                        </form>
                    </div>
                </div>
            </nav>
            <div class="loader"></div>
            <div id="mySidepanel" class="sidepanel">
                <div class="UserBox">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
                    <img src="~/Images/Usericon.png" alt="Avatar" class="avatar">
                    <p class="nusuario">@Session["nameUser"].ToString()</p>
                    <p class="estado"><i class='fas fa-circle' style='font-size:18px;'></i> En linea</p>
                </div>
                <br><br><br>
                <a href="@Url.Action("Index", "Home")" style="color: white;" class="btnm btnMenu"><i class="fa-solid fa-house-user"></i> INICIO <span class="label danger">Principal</span></a>
                <a href="@Url.Action("Tema", "Repositorio")" style="color: white;" class="btnm btnMenu"><i class="fa-solid fa-book-bookmark"></i> MI REPOSITORIO</a>
                @{
                    if (Session["perfil"].ToString() != "Administrador de contenido")
                    {
                        <a href="@Url.Action("Compartidos","Compartidos")" style="color: white;" class="btnm btnMenu"><i class="fa-solid fa-users"></i> COMPARTIDOS</a>
                    }



                    if (Session["perfil"].ToString().Equals("Administrador de contenido"))
                    {
                        <a href="@Url.Action("Usuarios", "Usuarios")" style="color: white;" class="btnm btnMenu"><i class="fa-solid fa-users-gear"></i> USUARIOS</a>
                    }
                }

                <a href="@Url.Action("Ayuda","Ayuda")" style="color: white;" class="btnm btnMenu"><i class="fas fa-question-circle"></i> AYUDA</a>
            </div>
            <div>
                <br /><br />
                <div class="container">
                    @RenderBody()
                    @*<p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>*@
                    <div style="position:absolute; z-index:-1; right:0px; top:740px;"><img src="~/Images/gestordocumental.png" class="img-fluid" width="250" height="250" /></div>
                </div>


                <footer class="fixed-bottom bg-white" style="z-index:-1; font-size:20px; font-weight: bold;">
                    @{
                        string perfil = Session["perfil"].ToString();
                        string version = ConfigurationManager.AppSettings["webpages:Version"];
                    }
                    <span class="float-start">&nbsp;&nbsp;&nbsp; @perfil</span>

                    <span class="float-end">@version | @DateTime.Now.Year</span>
                </footer>
            </div>
        }
        else
        {

            @Url.Action("Login", "Home");

        }
    }



    <script type="text/javascript">

        $(window).load(function () {
            $(".loader").fadeOut("slow");
        });
        //Codigo script para poner el foco seleccionado en el nombre del Tema al momento de crearlo
        function validarInput() {
            document.getElementById("btnCrear").disabled = !document.getElementById("namedirectory").value.length;
            document.getElementById("btnUpdate").disabled = !document.getElementById("updatedirectory").value.length;
        }

        //Funcion para seleccionar automaticamente el texto
        $.fn.once = function (events, callback) {
            return this.each(function () {
                var myCallback = function (e) {
                    callback.call(this, e);
                    $(this).off(events, myCallback);
                };
                $(this).on(events, myCallback);
            });
        };

        $("#namedirectory").focus(function () {
            $(this).once("click keyup", function (e) {
                $(this).select();
            });
        });

        $("#updatedirectory").focus(function () {
            $(this).once("click keyup", function (e) {
                $(this).select();
            });
        });

        // event logger
        $("#namedirectory").on("mousedown focus mouseup click blur " +
            "keydown keypress keyup change",
            function (e) {
                console.log(e.type);
            });
        // event logger
        $("#updatedirectory").on("mousedown focus mouseup click blur " +
            "keydown keypress keyup change",
            function (e) {
                console.log(e.type);
            });

       
    </script>
</body>
</html>
