
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.bundle.js"></script>
<link href="~/Content/css/Style.css" rel="stylesheet" />
<div class="container">
  
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <br />
            <div class="card borderlogin  shadow p-4 mb-4 bg-white">
                <div class="card-header text-center">
                    <b>INICIAR SESIÓN</b>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                          
                            <label for="correo" class="form-label">Correo:</label>
                            <input type="text" name="user" placeholder="Usuario"/>
                            @*@Html.TextBoxFor(m => m.correo, "", new { @class = "form-control", @placeholder = "Ingresa tu correo" })*@

                        </div>
                        <div class="form-group">

                            <label for="contraseña" class="form-label">Contraseña:</label>
                            <input type="text" name="pass" placeholder="Contraseña" />
                            @*@Html.PasswordFor(m => m.contraseña, new { @class = "form-control", @placeholder = "Ingresa tu contraseña" })*@
                        </div>
                        <br />
                        <div class="d-grid">
                            <input type="submit" name="submit" class="btn btn-primary btn-block " value="Login" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

